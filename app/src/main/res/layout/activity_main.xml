<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- APP TITLE -->
    <TextView
        android:id="@+id/version_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="MyCalc v2.6"
        android:textColor="#FB0808"
        android:textSize="14sp" />

    <!-- RESULT AREA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#817D7D"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/result_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/result_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="@color/black"
            android:textSize="40sp" />
    </LinearLayout>

    <!-- CALCULATOR GRID -->
    <GridLayout
        android:id="@+id/calculator_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="8dp">

        <!-- ROW 1 -->
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_bkdel" android:text="⌫" style="@style/CalcButtonDark"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_wdel" android:text="AC"
            android:singleLine="true"
            android:textAllCaps="false"
            style="@style/CalcButtonDark"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_mod" android:text="%" style="@style/CalcButtonDark"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_division" android:text="÷" style="@style/CalcButtonOperator"/>

        <!-- ROW 2 -->
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_seven" android:text="7" style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_eight" android:text="8" style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_nine" android:text="9" style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_multiplication" android:text="×" style="@style/CalcButtonOperator"/>

        <!-- ROW 3 -->
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_four" android:text="4" style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_five" android:text="5" style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_six" android:text="6" style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_subtraction" android:text="−" style="@style/CalcButtonOperator"/>

        <!-- ROW 4 -->
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_one" android:text="1" style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_two" android:text="2" style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_three" android:text="3" style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_add" android:text="+" style="@style/CalcButtonOperator"/>

        <!-- ROW 5 -->
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_zz" android:text="00" style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_zero" android:text="0" style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_comma" android:text="." style="@style/CalcButtonNumber"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_equal" android:text="=" style="@style/CalcButtonOperator"/>

    </GridLayout>

</LinearLayout>