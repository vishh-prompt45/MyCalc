<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButtonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>


        <item name="android:padding">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="CalcButtonNumber" parent="CalcButtonBase">
        <item name="android:background">@drawable/calc_button_number</item>
    </style>

    <style name="CalcButtonOperator" parent="CalcButtonBase">
        <item name="android:background">@drawable/calc_button_operator</item>
    </style>

    <style name="CalcButtonDark" parent="CalcButtonBase">
        <item name="android:background">@drawable/calc_button_dark</item>
    </style>

</resources>